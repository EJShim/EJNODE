.container {
  margin: 0;
  padding: 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.controlPanel {
  position: absolute;
  left: 25px;
  top: 25px;
  background-color: white;
  border-radius: 5px;
  list-style: none;
  padding: 5px 10px;
  margin: 0;
  display: block;
  border: solid 1px black;
}
